<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/background"
        android:layout_height="match_parent"
        tools:context=".ui.frags.HomeFragment">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:id="@+id/top_lay"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/alarm_top_bg"
            android:layout_height="@dimen/_80sdp"
            >
        <ImageView
            android:src="@drawable/ic_baseline_close_24"
            android:id="@+id/close_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/save_btn"
            app:layout_constraintBottom_toBottomOf="@id/save_btn"
            android:layout_marginStart="@dimen/_10sdp"
            android:padding="@dimen/_4sdp"
            app:tint="@color/primary"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            />
        <Button
            android:id="@+id/save_btn"
            android:layout_margin="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Save"
            android:textColor="@color/white"
            android:backgroundTint="@color/primary"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/alarm_txt"
            android:textColor="@color/textColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold"
            android:text="New Alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:id="@+id/alarm_name_layout"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/top_lay"
            android:layout_margin="@dimen/_20sdp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:text="Alarm Name"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/textColor_lite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/alarm_name_ed"
                android:hint="enter name"
                android:textSize="@dimen/_16sdp"
                android:backgroundTint="@color/textColor_lite2"
                android:textColor="@color/textColor"
                android:inputType="textPersonName"
                android:textColorHint="@color/textColor_lite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/time_layout"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/alarm_name_layout"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:text="Time"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/textColor_lite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/time_ed"
                android:hint="00:00 AM"
                android:focusable="false"
                android:textSize="@dimen/_16sdp"
                android:backgroundTint="@color/textColor_lite2"
                android:textColor="@color/textColor"
                android:inputType="textPersonName"
                android:textColorHint="@color/textColor_lite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/weekday_layout"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/time_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/repeat_txt"
                android:text="Repeat"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/textColor_lite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Weekdays"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/textColor_lite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/weekDays_rv"
                app:layout_constraintTop_toBottomOf="@id/repeat_txt"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"
                tools:itemCount="7"
                tools:listitem="@layout/weekdays_item_layout"
                android:layout_height="wrap_content"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/repeat_everyDayLayout"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_8sdp"
            app:layout_constraintTop_toBottomOf="@id/weekday_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            >
            <TextView
                android:text="Repeat EveryDay"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="@dimen/_13sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_gravity="start|center_vertical"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/textColor_lite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/everyDay_switch"
                android:src="@drawable/switch_off"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_gravity="end|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.cardview.widget.CardView>
        <Button
            android:id="@+id/delete_btn"
            android:layout_margin="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Delete"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/white"
            android:backgroundTint="@color/primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>